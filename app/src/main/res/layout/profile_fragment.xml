<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:enabled="false"
            android:ems="10"
            android:id="@+id/name_profile_edit"
            android:hint="@string/name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:enabled="false"
            android:ems="10"
            android:id="@+id/phone_profile_edit"
            android:hint="@string/phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/name_profile_edit"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:enabled="false"
            android:ems="10"
            android:id="@+id/repeatpassword_profile_edit" android:hint="@string/repeatpassword"
            app:layout_constraintTop_toBottomOf="@+id/password_profile_edit" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:enabled="false"
            android:ems="10"
            android:id="@+id/address_profile_edit"
            android:hint="@string/street"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/city_profile_edit"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:enabled="false"
            android:ems="10"
            android:id="@+id/city_profile_edit"
            android:hint="@string/city"
            app:layout_constraintTop_toBottomOf="@+id/repeatpassword_profile_edit" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:enabled="false"
            android:ems="10"
            android:id="@+id/password_profile_edit"
            android:hint="@string/password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/phone_profile_edit"/>
    <Button
            android:text="@string/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save_profile_button"
            android:textColor="@color/DefaultTextGray"
            android:background="@drawable/button_rounded_corners"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.501" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_switch"/>
    <Button
            android:id="@+id/logout_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded_corners"
            android:text="@string/logout"
            android:textColor="@color/DefaultTextGray"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/save_profile_button"/>
    <Switch
            android:text="@string/editprofile"
            android:layout_width="206dp"
            android:layout_height="23dp"
            android:textColor="@color/DefaultTextGray"
            android:id="@+id/edit_profile_switch" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/address_profile_edit" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>