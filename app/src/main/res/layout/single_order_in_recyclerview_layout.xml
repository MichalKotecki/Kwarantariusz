<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:padding="8dp" android:layout_width="match_parent"
              android:layout_height="wrap_content"
               android:background="@drawable/background_order_with_corners"
                android:backgroundTintMode="screen"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_marginTop="15dp"
                android:layout_marginBottom="15sp">


    <TextView
            android:text="@string/TEMP"
            android:textColor="@color/BasicWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_street_textView" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textSize="18sp"/>
    <TextView
            android:text="@string/TEMP"
            android:textColor="@color/BasicWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_max_spent_textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:layout_marginStart="70dp"
            app:layout_constraintStart_toEndOf="@+id/order_street_textView"/>
    <TextView
            android:text="@string/TEMP"
            android:textColor="@color/BasicWhite"
            android:layout_width="207dp"
            android:layout_height="22dp"
            android:id="@+id/order_name_textView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/order_street_textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
    <TextView
            android:text="@string/TEMP"
            android:textColor="@color/BasicWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_phone_textView"
            app:layout_constraintStart_toEndOf="@+id/order_name_textView" android:layout_marginStart="20dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/order_max_spent_textView"/>
    <TextView
            android:text="@string/TEMP"
            android:textColor="@color/BasicWhite"
            android:layout_width="184dp"
            android:layout_height="62dp"
            android:id="@+id/order_description_textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/order_phone_textView"/>
    <TextView
            android:text="@string/TEMP"
            android:textColor="@color/BasicWhite"
            android:layout_width="356dp"
            android:layout_height="111dp"
            android:id="@+id/order_products_textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/order_description_textView"/>
    <Button
            android:text="@string/help"
            android:layout_width="95dp"
            android:layout_height="65dp"
            android:background="@drawable/button_rounded_corners"
            android:textColor="@color/BasicWhite"
            android:id="@+id/order_help_button" app:layout_constraintStart_toEndOf="@+id/order_description_textView"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/order_phone_textView"/>
</androidx.constraintlayout.widget.ConstraintLayout>